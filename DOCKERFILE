FROM python:3.9-slim-buster  # Or your preferred Python base image

WORKDIR /app

COPY requirements.txt .
RUN pip install -r requirements.txt

COPY . .

# Run your setup script
RUN python server_setup.py

# Expose the port your application listens on.  Replace 8080 with your port.
EXPOSE 10000

# Define the command to run when the container starts.
CMD ["python", "server.py"]  # Or whatever command starts your app